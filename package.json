{
  "name": "learning-npm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html",
    "test:html": "glob-run nu-html-checker *.html",

    "build": "npm run build:clean && npm run build:scss && npm run build:autoprefixer && npm run test",
    "build:clean" : "rimraf css",
    "build:scss": "scss --update scss/style.scss:css/style.prefixed.css",
    "build:autoprefixer": "autoprefixer-cli css/style.prefixed.css",

    "watch":"parallelshell \"npm run watch:scss\" \"npm run watch:autoprefixer\" \"npm run watch:browser-sync\" ",
    "watch:scss": "scss --watch scss:css",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
    "watch:browser-sync" : "browser-sync start --server . --files css/*.css *.html"
    },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
  "autoprefixer-cli": "^1.0.0",
  "browser-sync": "^2.18.13",
  "glob-run": "^0.1.6",
  "nu-html-checker": "^0.1.0",
  "onchange": "^3.2.1",
  "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "parallelshell": "^3.0.2"
  }
}
